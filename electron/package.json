{
  "name": "electron",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "electron dist/main.js",
    "dev": "tsc && electron dist/main.js",
    "clean": "rimraf dist dist-electron",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.prepify.app",
    "productName": "Prepify",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "zip"
    },
    "linux": {
      "target": "tar.gz"
    }
  }
}
