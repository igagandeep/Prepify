{
  "name": "electron",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/igagandeep/Prepify.git"
  },
  "scripts": {
    "build": "tsc",
    "build:all": "npm run build:backend && npm run build:frontend && npm run build",
    "build:backend": "cd ../backend && npm run build",
    "build:frontend": "cd ../frontend && npm run build",
    "start": "electron dist/main.js",
    "dev": "tsc && electron dist/main.js",
    "clean": "rimraf dist dist-electron",
    "pack": "npm run build:all && electron-builder --dir",
    "dist": "npm run build:all && electron-builder",
    "dist:win": "npm run build:all && electron-builder --win",
    "test": "node ../scripts/test-backend.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.8.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.prepify.app",
    "productName": "Prepify",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "../backend/package.json",
        "to": "backend/package.json"
      },
      {
        "from": "../backend/prisma",
        "to": "backend/prisma"
      },
      {
        "from": "../frontend/out",
        "to": "frontend"
      }
    ],
    "beforeBuild": null,
    "publish": null,
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "zip"
    },
    "linux": {
      "target": "tar.gz"
    }
  }
}
